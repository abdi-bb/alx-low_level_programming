CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

$(OBJ): %.o: %.c m.h
	$(CC) -c $< -o $@ $(CFLAGS)

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
